<section id="contact" class="contact">
  <div class="container contact-container">
    <div class="contact-info">
      <span class="section-tag">Contáctanos</span>
      <h2 class="section-title">Construyamos algo grande juntos.</h2>
      <p class="contact-desc">
        ¿Tienes un proyecto en mente? Nos encantaría escucharlo. Ya sea que
        busques software a medida o solo necesites asesoramiento técnico,
        nuestro equipo está listo para ayudarte.
      </p>

      <div class="contact-details">
        <div class="detail-item">
          <strong>Email:</strong>
          <a href="mailto:xeriontech01@gmail.com">xeriontech01@gmail.com</a>
        </div>
        <div class="detail-item">
          <strong>Oficina:</strong>
          <span>Remoto, con base en Argentina</span>
        </div>
      </div>
    </div>

    <div class="contact-form-wrapper">
      <form
        class="contact-form"
        id="contact-form"
        action="https://formspree.io/f/xeelvwnw"
        method="POST"
      >
        <div class="form-group">
          <label for="name">Nombre</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Tu nombre"
            required
            minlength="3"
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="_replyto"
            placeholder="tu@email.com"
            required
          />
        </div>

        <div class="form-group">
          <label for="phone">Teléfono</label>
          <div class="phone-input-container">
            <div class="custom-select" id="country-select">
              <div class="select-selected">
                <img src="https://flagcdn.com/w20/ar.png" alt="AR" />
                <span>+54</span>
              </div>
              <div class="select-items select-hide">
                <div data-value="+54" data-code="ar">
                  <img src="https://flagcdn.com/w20/ar.png" alt="AR" /> +54
                </div>
                <div data-value="+34" data-code="es">
                  <img src="https://flagcdn.com/w20/es.png" alt="ES" /> +34
                </div>
                <div data-value="+1" data-code="us">
                  <img src="https://flagcdn.com/w20/us.png" alt="US" /> +1
                </div>
                <div data-value="+52" data-code="mx">
                  <img src="https://flagcdn.com/w20/mx.png" alt="MX" /> +52
                </div>
                <div data-value="+56" data-code="cl">
                  <img src="https://flagcdn.com/w20/cl.png" alt="CL" /> +56
                </div>
                <div data-value="+57" data-code="co">
                  <img src="https://flagcdn.com/w20/co.png" alt="CO" /> +57
                </div>
                <div data-value="+51" data-code="pe">
                  <img src="https://flagcdn.com/w20/pe.png" alt="PE" /> +51
                </div>
                <div data-value="+598" data-code="uy">
                  <img src="https://flagcdn.com/w20/uy.png" alt="UY" /> +598
                </div>
                <div data-value="+55" data-code="br">
                  <img src="https://flagcdn.com/w20/br.png" alt="BR" /> +55
                </div>
              </div>
              <input
                type="hidden"
                name="country-code"
                id="country-code-input"
                value="+54"
              />
            </div>
            <input
              type="tel"
              id="phone"
              name="phone"
              placeholder="Número de teléfono"
              required
            />
          </div>
        </div>

        <div class="form-group">
          <label for="message">Mensaje</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            placeholder="Cuéntanos sobre tu proyecto..."
            required
            minlength="10"></textarea>
        </div>

        <button type="submit" class="submit-btn" id="submit-btn"
          >Vamos a construir</button
        >
        <div id="form-status" class="form-status"></div>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const status = document.getElementById("form-status");
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;

  // Custom Select Logic
  const initCustomSelect = () => {
    const customSelect = document.getElementById("country-select");
    const selected = customSelect?.querySelector(".select-selected");
    const items = customSelect?.querySelector(".select-items");
    const hiddenInput = document.getElementById(
      "country-code-input",
    ) as HTMLInputElement;

    selected?.addEventListener("click", (e) => {
      e.stopPropagation();
      items?.classList.toggle("select-hide");
      selected.classList.toggle("select-active");
    });

    items?.querySelectorAll("div").forEach((item) => {
      item.addEventListener("click", () => {
        const value = item.getAttribute("data-value") || "";
        const code = item.getAttribute("data-code") || "";

        if (hiddenInput) hiddenInput.value = value;

        if (selected) {
          selected.innerHTML = `<img src="https://flagcdn.com/w20/${code}.png" alt="${code}"> <span>${value}</span>`;
        }

        items.classList.add("select-hide");
        selected?.classList.remove("select-active");
      });
    });

    document.addEventListener("click", () => {
      items?.classList.add("select-hide");
      selected?.classList.remove("select-active");
    });
  };

  initCustomSelect();
  document.addEventListener("astro:page-load", initCustomSelect);

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    if (!status || !submitBtn) return;

    // Basic Validation
    const formData = new FormData(form);
    const email = formData.get("_replyto") as string;
    const name = formData.get("name") as string;
    const phone = formData.get("phone") as string;
    const message = formData.get("message") as string;

    if (!name || name.length < 3) {
      showStatus(
        "Por favor, ingresa un nombre válido (mínimo 3 caracteres).",
        "error",
      );
      return;
    }

    if (!validateEmail(email)) {
      showStatus("Por favor, ingresa un email válido.", "error");
      return;
    }

    if (!phone || phone.length < 7) {
      showStatus("Por favor, ingresa un número de teléfono válido.", "error");
      return;
    }

    if (!message || message.length < 10) {
      showStatus("El mensaje es muy corto (mínimo 10 caracteres).", "error");
      return;
    }

    // Submit to Formspree
    try {
      submitBtn.disabled = true;
      submitBtn.innerText = "Enviando...";

      const response = await fetch(form.action, {
        method: form.method,
        body: formData,
        headers: {
          Accept: "application/json",
        },
      });

      if (response.ok) {
        showStatus(
          "¡Gracias! Tu mensaje ha sido enviado con éxito. Te contactaremos a la brevedad.",
          "success",
        );
        form.reset();
      } else {
        const data = await response.json();
        if (Object.hasOwn(data, "errors")) {
          showStatus(
            data["errors"].map((error: any) => error["message"]).join(", "),
            "error",
          );
        } else {
          showStatus("Ups! Hubo un problema al enviar el formulario.", "error");
        }
      }
    } catch (error) {
      showStatus("Ups! Hubo un problema de conexión.", "error");
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerText = "Vamos a construir";
    }
  });

  function validateEmail(email: string) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  }

  function showStatus(message: string, type: "success" | "error") {
    if (!status) return;
    status.innerText = message;
    status.className = `form-status ${type}`;

    if (type === "success") {
      setTimeout(() => {
        status.innerText = "";
        status.className = "form-status";
      }, 5000);
    }
  }
</script>

<style>
  @import "../styles/Contact.css";
</style>
