<header class="header">
  <div class="container header-container">
    <a href="/" class="logo">
      <img
        src="/icons/icono_empresa.svg"
        alt="XerionTech Icon"
        class="logo-icon"
      />
      <span class="logo-text">XerionTech</span>
    </a>

    <nav class="nav">
      <ul class="nav-list">
        <li><a href="#services">Servicios</a></li>
        <li><a href="#stack">Tecnologías</a></li>
        <li><a href="#about">Nosotros</a></li>
        <li><a href="#founders">Fundadores</a></li>
        <li><a href="#careers">Carreras</a></li>
        <li><a href="#contact">Contacto</a></li>
      </ul>
    </nav>

    <div class="header-actions">
      <button id="theme-toggle" class="theme-toggle" aria-label="Cambiar tema">
        <i data-lucide="sun" class="sun-icon"></i>
        <i data-lucide="moon" class="moon-icon"></i>
      </button>
      <a href="#contact" class="cta-button">Hablemos</a>
      <button class="mobile-menu-toggle" aria-label="Alternar menú">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<script>
  import { createIcons, Sun, Moon } from "lucide";

  // Initialize Lucide icons
  const initHeader = () => {
    createIcons({
      icons: { Sun, Moon },
    });

    const toggleMenu = document.querySelector(".mobile-menu-toggle");
    const nav = document.querySelector(".nav");
    const themeBtn = document.getElementById("theme-toggle");

    toggleMenu?.addEventListener("click", () => {
      nav?.classList.toggle("active");
      toggleMenu?.classList.toggle("active");
    });

    // Close menu when clicking a link
    const navLinks = document.querySelectorAll(".nav-list a");
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        nav?.classList.remove("active");
        toggleMenu?.classList.remove("active");
      });
    });

    // Theme Toggle Logic
    themeBtn?.addEventListener("click", () => {
      const element = document.documentElement;
      element.classList.toggle("dark");

      const isDark = element.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
  };

  initHeader();
  document.addEventListener("astro:page-load", initHeader);
</script>

<style>
  @import "../styles/Header.css";
</style>
